<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_post"
        android:orientation="vertical"
        xmlns:tools="http://schemas.android.com/tools">

        <android.support.v7.widget.CardView
            app:cardBackgroundColor="@color/background_card_post"
            android:layout_marginTop="@dimen/smallGap"
            android:layout_marginRight="@dimen/smallGap"
            android:layout_marginLeft="@dimen/smallGap"
            app:cardCornerRadius="@dimen/smallGap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/smallGap"
                android:layout_marginRight="@dimen/smallGap"
                android:layout_marginLeft="@dimen/smallGap"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tvNameUser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/smallGap"
                    android:textSize="@dimen/header_text_big"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="Volodymyr Kryvyy" />

                <TextView
                    android:id="@+id/tvTitlePost"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/smallGap"
                    android:textSize="@dimen/header_text_small"
                    tools:text="header tiitle "/>

                <ScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tvBodyPost"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxHeight="300dp"
                        android:padding="@dimen/smallGap"
                        android:textSize="@dimen/text_body"
                        tools:text="header tiitle gfdsgdsgdsdgdsgdsgggsgd
        fg dgdsds sdsdsgdsgdsgdgdgg  gd  gf  gf   f
        fdggdfhshvtht ht t vtvft thvvvhtvdhddfhukjfsfkfkjshffhshdsh
        sdhfkjskhsdhfshfhshfskdfkhsdhf "/>
                </ScrollView>
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_marginTop="@dimen/bigGap"
            android:layout_gravity="center_horizontal"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:indeterminate="true"
            android:indeterminateTintMode="src_atop"
            android:indeterminateTint="@color/second_gradient_background"/>

        <LinearLayout
            android:id="@+id/layoutComments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/smallGap"
            android:layout_marginRight="@dimen/smallGap"
            android:minHeight="100dp"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/middleGap"
                android:layout_marginRight="@dimen/middleGap"
                android:background="@drawable/background_comment_post"
                android:paddingTop="@dimen/smallGap"
                android:text="@string/comments"
                android:textSize="@dimen/header_text_small" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rvComments"
                android:layout_marginLeft="@dimen/smallGap"
                android:layout_marginRight="@dimen/smallGap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </android.support.v7.widget.RecyclerView>
        </LinearLayout>
    </LinearLayout>
</layout>