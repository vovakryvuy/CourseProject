<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/smallGap"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/smallGap"
    app:cardElevation="@dimen/smallGap">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvItemTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/smallGap"
            android:textSize="@dimen/header_text_big"
            tools:text="Post" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/darkGrey" />

        <TextView
            android:id="@+id/tvItemBody"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/middleGap"
            tools:text="djfl;skfkgs;kg
            skdkskgksg;lfkslgk;
            lkgd;lkg;lskgdsk;ldsk k;kgdskdskg" />
    </LinearLayout>

</android.support.v7.widget.CardView>