<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="kryvyy.course.pllug.om.courseproject">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_project"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_project_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".ui.SplashActivity"
            android:theme="@style/ThemeNoBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ui.authorization.AuthorizationActivity"
            android:screenOrientation="portrait"
            android:theme="@style/ThemeNoBar"/>

        <activity android:name=".ui.main.MainActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>